<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/admin1.css">
    <title>BIEN</title>
</head>
<body>
    <div class="container-fluid d-flex bien">
        <div class="left">
           <div class="container">
               <div class="logo"></div>
            <div class="menu">
                 <ul>
                    <li ><img src="/images/user.png" alt=""><a href="#"> Liste des clients inscrits</a></li>
                    <li ><img src="/images/editer.png" alt=""><a href="/Admin/voirbien">Liste des Biens</a></li>
                    <li onclick="contactuser()"><img src="/images/search.png" alt=""><a href="#">Liste des Contacts</a></li>            
                </ul>
            </div>
           </div>
        </div>
      

        <div class="users">
            <div class="texte">
                <h1 class="text-center">LA LISTE DES CLIENTS INSCRITS</h1>
            </div>
            <table class="table align-middle mb-0 bg-white">
                <thead class="" style="background-color: #2288ff; color: white;">
                    <tr>
                        <th>Image</th>
                        <th>Nom</th>
                        <th>Prenom</th>
                        <th>Adresse Email</th>
                        <th>Numero</th>
                        <th>Ville actuelle</th>
                    </tr>
                </thead>
                <% user.forEach(function(user){ %>
                <tbody>
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <img src="<%= user.image %>" alt="" style="width: 45px; height: 45px"
                                    class="rounded-circle" />
                            </div>
                        </td>
                        <td>
                            <p class="fw-normal "><%= user.nom %></p>
                        </td>
                        <td>
                            <p class="fw-normal "><%= user.prenom %></p>
                        </td>
                        <td>
                            <p class="fw-normal "><%= user.email %></p>

                        </td>
                        <td>
                            <p class="fw-normal "><%= user.numero %></p>
                        </td>
                        <td>
                            <p class="fw-normal "><%= user.ville %></p>
                        </td>
                    </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <div class="contact">
            <div class="texte">
                <h1 class="text-center">LA LISTE DES CONTACTS</h1>
            </div>
            <table class="table align-middle mb-0 bg-white">
                <thead class="" style="background-color: #2288ff; color: white;">
                    <tr>
                        <th>Nom</th>
                        <th>Adresse</th>
                        <th>Numero</th>
                        <th>Bien choisi</th>
                       
                    </tr>
                </thead>
                <% contact.forEach(function(contact){ %>
                <tbody>
                    <tr>
                        <td>
                            <p class="fw-normal "><%= contact.nom %></p>
                        </td>
                        <td>
                            <p class="fw-normal "><%= contact.email %></p>
                            
                        </td>
                        <td>
                                <p class="fw-normal "><%= contact.numero %></p>
                        </td>
                        <td>
                            <a href="/detail/<%= contact.idbien %>" class="btn btn-link btn-sm btn-rounded"> Voir le bien</a>
                        </td>
                    </tr>
                </tbody>
                <% }); %>
            </table>
        </div>
    </div>


    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/3.11.0/mdb.min.js"></script>
    <script src="/js/admin.js"></script>
</body>
</html>