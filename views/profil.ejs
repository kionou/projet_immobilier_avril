<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <!-- <link href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/4.0.0/mdb.min.css" rel="stylesheet"/> -->
    <link rel="stylesheet" href="/css/Profil.css">
    <title>Profil</title>
</head>
<body>
   
    <header>
        <a href="/" class="logo">
            <img class="img-thumbnail" src="/images/logopng.png" />
        </a>
        <nav class="navbar">
            <ul>
                
                <li><a href="/">Accueil</a></li>
                <li><a href="/#contact">Contact</a></li>
                
                <!-- <li><button><a href="/logout">Mon compte</a></button></li> -->
            </ul>
        </nav>
        <div class="dropdow">
            <% success.forEach(function(user){ %>
            <div class="image" onclick="menuToggle()">
                <div class="profile" >
                    <img src="<%=user.image %>" alt="">
                </div>
                <p><%=user.nom %></p>
            </div>
            <% }); %>
            <div class="menu">
                <ul>
                        <% success.forEach(function(user){ %>
                    <li><img src="/images/user.png" alt=""><a href="/profil" >Voir profil</a></li>
                
                    <li  onclick="editer('<%= user.id %>')"><img src="/images/editer.png" alt=""><a  >Modifier profil</a></li>
                    <% }); %>
                    <!-- <li><img src="/images/search.png" alt=""><a href="#">Recherche</a></li> -->
                    <li onclick="logout()"><img src="/images/logout.png" alt=""><a href="/logout" >Se déconnecter</a></li>
                </ul>
            </div>
        </div>
    </header>
   
    <div class="container-profil">
        <% success.forEach(function(user){ %>
        <div class="profil-content">
            <div class="profil-image">
                <img src="<%=user.image %>" alt="">
            </div> 
            <div id="trait_dessus">
                <!-- <hr> -->
            </div>
            <div class="profil-body">
                <div>
                     <p>Nom : <span><%=user.nom %></span></p>
                      <p>Prenom : <span><%=user.prenom %></span></p>
                    <p>Adresse Email : <span><%=user.email %></span></p>
                    <p>Téléphone : <span><%=user.numero %></span></p>
                    <p>Ville Actuelle : <span><%= user.lieu %></span></p>

                </div>
            </div> 
            <button id="open" >supprimer</button>
        </div>
        
        <% }); %>
    </div>
<% success.forEach(function(user){ %>
    <div class="modal-container" id="modal">
        <div class="modal">
            <!-- <i class="fas fa-heart"></i> -->
            <p>Etre vous sure de voulois supprimer votre compte.</p>
            <div class="boutton">
                <button class="btnredirect" onclick="non()">Non</button>
                <button  onclick="supp('<%= user.id %>')" class="btnredirect" >Oui</button>
    
            </div>
            <i id="closer" class="fas fa-times"></i>
        </div>
    </div>
    <% }); %>

   


    <script src="https://kit.fontawesome.com/0eca8d30fc.js" crossorigin="anonymous"></script>
    <script src="/js/profil.js"></script>
</body>
</html>